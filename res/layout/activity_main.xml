<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/HolaMundo"
        android:layout_width="0dp"
        android:layout_height="31dp"
        android:layout_marginTop="92dp"
        android:text="Hello World!"
        android:textAlignment="center"
        android:textColor="@color/pink"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAumentar"
        android:layout_width="253dp"
        android:layout_height="50dp"
        android:layout_marginTop="68dp"
        android:background="@color/blue"
        android:text="Aumentar tamaÃ±o"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/HolaMundo" />

    <Button
        android:id="@+id/btnCambiar"
        android:layout_width="253dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:background="@color/orange"
        android:text="Cambiar color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAumentar" />

    <Button
        android:id="@+id/btnEsconder"
        android:layout_width="253dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:background="@color/blue"
        android:text="Esconder texto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCambiar" />

</androidx.constraintlayout.widget.ConstraintLayout>